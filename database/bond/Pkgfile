name=bond
version=2.7.0
release=1
source=(http://www.treshna.com/downloads/bond-$version.tar.gz)

build()
{
  cd bond

  ./configure \
       --build="$build" \
       --host="$host" \
       --target="$target" \
       --prefix="$prefix"

  make
  make DESTDIR="$PKG" install
}
