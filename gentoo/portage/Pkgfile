name=portage
version=2.1.2.12
release=1
source=(http://distfiles.gentoo.org/distfiles/portage-$version.tar.bz2)

build()
{
  cd portage-$version

  ./configure \
       --build="$build" \
       --host="$host" \
       --target="$target" \
       --prefix="$prefix"

  make
  make DESTDIR="$PKG" install
}
