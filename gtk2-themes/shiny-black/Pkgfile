# Package: gtk2-shinyblack-theme
# Section: universe/gnome
# Description: Black Shiny theme loosely based on/inspired by the Glossy P theme.
# URL: http://art.gnome.org/themes/gtk2/1356
# Maintainer: Roman Senn <roman@digitall.ch>
# Depends on: libgtk-2.0

name=shiny-black
version=1.0
release=1
source=($mirror_gnome/teams/art.gnome.org/themes/gtk2/GTK2-ShinyBlack.tar.gz)

build()
{
  install -d $ROOT/share/themes

  cp -rf ShinyBlack $ROOT/share/themes
}

