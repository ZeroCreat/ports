name=libxkbfile
version=1.0.5
release=1
source=(ftp://ftp.x.org/pub/individual/lib/libxkbfile-1.0.5.tar.bz2)

build() 
{
  cd libxkbfile-$version
  
  ./autogen.sh
  
  ./configure \
       --build="$build" \
       --host="$host" \
       --prefix="$prefix"
  
  make
  make DESTDIR="$PKG" install
}

